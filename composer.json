{
    "authors": [
        {
            "email": "fkooman@tuxed.net",
            "name": "Fran\u00e7ois Kooman",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "LC\\Portal\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LC\\Portal\\Tests\\": "tests/"
        }
    },
    "description": "User and admin portal for Let's Connect! and eduVPN",
    "license": "AGPL-3.0-or-later",
    "name": "lc/vpn-user-portal",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "vcs",
            "url": "https://git.sr.ht/~fkooman/php-oauth2-server"
        },
        {
            "type": "vcs",
            "url": "https://git.sr.ht/~fkooman/php-saml-sp"
        }
    ],
    "require": {
        "ext-curl": "*",
        "ext-date": "*",
        "ext-hash": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-sodium": "*",
        "ext-spl": "*",
        "ext-sqlite3": "*",
        "fkooman/oauth2-server": "7.x-dev",
        "php": ">=7.4"
    },
    "require-dev": {
        "ext-json": "*",
        "fkooman/saml-sp": "2.x-dev",
        "phpunit/phpunit": "^9"
    },
    "suggest": {
        "ext-ldap": "Support LDAP user authentication",
        "ext-radius": "Support RADIUS user authentication",
        "ext-mysqlnd": "Support MySQL/MariaDB for backend storage"
    },
    "support": {
        "email": "eduvpn-support@lists.geant.org",
        "source": "https://git.sr.ht/~fkooman/vpn-user-portal"
    },
    "type": "project"
